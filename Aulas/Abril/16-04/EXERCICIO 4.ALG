Algoritmo "Exercicio 4"


Var

   n, indice, fatorial: inteiro

Inicio
   Cronometro on
   escreval("Digite um numero")
   leia(n)
   limpatela

   fatorial <- 1

   para indice de 1 ate n faca
      fatorial <- fatorial * indice
   fimpara

   escreval("O fatorial de", n, " é:", fatorial)
   Cronometro off

Fimalgoritmo
